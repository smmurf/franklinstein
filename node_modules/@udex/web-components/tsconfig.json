{
    "include": ["src/**/*", "global.d.ts"],
    "compilerOptions": {
      "target": "ES2021",
      "module": "esnext",
      // Generate d.ts files
      "declaration": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "sourceMap": true,
      "inlineSources": true,
      "strict": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    },
}
