<div class="udex-quote__container">
    <div class="udex-quote__image-container">
        {{#if image}}
            <slot name="image" slot="image"></slot>
        {{/if}}
    </div>
    <div class="udex-quote__content-container">
        <div class="content-container__text-container">
            <p class="content-container__text">
                <slot></slot>
            </p>
        </div>
        {{#if author}}
            <slot slot="author" name="author"></slot>
        {{/if}}
        {{#if link}}
            <slot slot="link" name="link"></slot>
        {{/if}}
    </div>
</div>
