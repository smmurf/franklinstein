<div class="udex-text-field__container">
    {{#if label}}
        <label for="input" class="{{labelClasses}}">
            {{label}}
            {{#if required}}
             *
            {{/if}}
        </label>
    {{/if}}
     <input id="input" class="udex-text-field__input"
        type="text"
        .value="{{value}}"
        @input="{{handleInput}}"
        @focus="{{handleFocus}}"
        @blur="{{handleBlur}}"
        @keydown="{{handleKeyDown}}"
        maxlength="{{maxlength}}"
        ?disabled="{{disabled}}"
        ?readonly="{{isInputReadonly}}"
        ?required="{{required}}"
        dir="{{dirValue}}"
        aria-required="{{required}}"
        aria-readonly="{{isInputReadonly}}"
        aria-disabled="{{disabled}}"
    />
    {{#if supportingText}}
        <span class="udex-text-field__supporting-text">
            {{supportingText}}
        </span>
    {{/if}}
</div>
