<footer class="udex-footer">
  <div class="udex-footer__content">
    <div class="udex-footer__contact-social">
      <div class="udex-footer__contact-wrapper">
        {{#if logoUrl}}
          <div class="udex-footer__logo">
            <img src="{{logoUrl}}" class="udex-footer__logo-image" />
          </div>
        {{/if}}
        <div class="udex-footer__contact">
          {{#if contactNumbersArray.length}}
          <div>
            <div class="udex-footer__numbers">
              <ui5-icon class="udex-footer__icon" name="headset"></ui5-icon>
              <div>
                <div class="udex-footer__numbers-wrapper">
                  {{#each contactNumbersArray}}
                    <div>
                      <p class="udex-footer__country">{{this.country}}</p>
                      <a href="tel:{{this.number}}" class="udex-footer__number">
                        {{this.number}}
                      </a>
                    </div>
                  {{/each}}
                </div>
                {{#if localCountryNumbersLink}}
                  <p class="udex-footer__remark">
                    Or see our complete list of &nbsp
                    <a href="{{this.localCountryNumbersLink}}">
                      local country numbers.
                    </a>
                  </p>
                {{/if}}
              </div>
            </div>
          </div>
          {{/if}}
          <div>
            {{#if contactUsLink}}
              <div class="udex-footer__contact-us">
                <ui5-icon class="udex-footer__icon" name="email"></ui5-icon>
                <a href="{{contactUsLink}}" class="udex-footer__contact-us-link">Contact us</a>
              </div>
            {{/if}}
          </div>
          <div>
            {{#if chatWithUsLink}}
            <div class="udex-footer__chat-with-us">
              <ui5-icon class="udex-footer__icon" name="discussion-2"></ui5-icon>
              <a href="{{chatWithUsLink}}" class="udex-footer__chat-with-us-link">Chat with us</a>
            </div>
            {{/if}}
          </div>
        </div>
      </div>

      {{#if socialLinksArray.length}}
        <div class="udex-footer__social">
          <div class="udex-footer__social-container">
            {{#each socialLinksArray}}
              <div>
                <a href="{{this.url}}" class="udex-footer__social-icon">
                  <img
                    src="{{this.iconUrl}}"
                    loading="lazy"
                  />
                </a>
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </div>

    {{#if isContactcontainerVisible}}
      <udex-divider class="udex-footer__divider"></udex-divider>
    {{/if}}

    <div class="udex-footer__links">
      {{#if quickLinksArray.length}}
        <div class="udex-footer__links-group">
            <div class="udex-footer__links-group-container">
              <div>
                <div @click="{{expandLinksList}}">
                  <udex-button
                    class="udex-footer__icon"
                    icon-only
                    icon="navigation-right-arrow"
                    design="Tertiary"
                    size="L"
                    accessible-name="quick links expand list">
                  </udex-button>
                  <h3>Quick Links</h3>
                </div>
              </div>
              <div>
                <div>
                  <ul>
                    {{#each quickLinksArray}}
                      <li><a href="{{this.url}}">{{this.title}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
        </div>
      {{else}}
        <div class="udex-footer__links-group--empty"></div>
      {{/if}}

      {{#if trendingLinksArray.length}}
        <div class="udex-footer__links-group">
            <div class="udex-footer__links-group-container">
              <div>
                <div @click="{{expandLinksList}}">
                  <udex-button
                    class="udex-footer__icon"
                    icon-only
                    icon="navigation-right-arrow"
                    design="Tertiary"
                    size="L"
                    accessible-name="trending links expand list">
                  </udex-button>
                  <h3>Trending</h3>
                </div>
              </div>
              <div>
                <div>
                  <ul>
                    {{#each trendingLinksArray}}
                      <li><a href="{{this.url}}">{{this.title}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
        </div>
      {{else}}
        <div class="udex-footer__links-group--empty"></div>
      {{/if}}

      {{#if aboutLinksArray.length}}
        <div class="udex-footer__links-group">
            <div class="udex-footer__links-group-container">
              <div>
                <div @click="{{expandLinksList}}">
                  <udex-button
                    class="udex-footer__icon"
                    icon-only
                    icon="navigation-right-arrow"
                    design="Tertiary"
                    size="L"
                    accessible-name="about sap links expand list">
                  </udex-button>
                  <h3>About SAP</h3>
                </div>
              </div>
              <div>
                <div>
                  <ul>
                    {{#each aboutLinksArray}}
                      <li><a href="{{this.url}}">{{this.title}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
        </div>
      {{else}}
        <div class="udex-footer__links-group--empty"></div>
      {{/if}}

      {{#if siteInformationLinksArray.length}}
        <div class="udex-footer__links-group">
            <div class="udex-footer__links-group-container">
              <div>
                <div @click="{{expandLinksList}}">
                  <udex-button
                    class="udex-footer__icon"
                    icon-only
                    icon="navigation-right-arrow"
                    design="Tertiary"
                    size="L"
                    accessible-name="site information links expand list">
                  </udex-button>
                  <h3>Site Information</h3>
                </div>
              </div>
              <div>
                <div>
                  <ul>
                    {{#each siteInformationLinksArray}}
                      <li><a href="{{this.url}}">{{this.title}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
            </div>
        </div>
      {{else}}
        <div class="udex-footer__links-group--empty"></div>
      {{/if}}
    </div>

    <udex-divider class="udex-footer__divider"></udex-divider>

    {{#if socialLinksArray.length}}
      <div class="udex-footer__social">
        <div class="udex-footer__social-container">
          {{#each socialLinksArray}}
            <div>
              <a href="{{this.url}}" class="udex-footer__social-icon">
                <img
                  src="{{this.iconUrl}}"
                  loading="lazy"
                />
              </a>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>

  <udex-button
    class="udex-footer__back-to-top-button"
    icon-only
    icon="back-to-top"
    @click="{{onBackToTopClick}}"
    design="Tertiary"
    size="L"
    accessible-name="back to top"
  ></udex-button>
</footer>
