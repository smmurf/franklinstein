<li
    role="listitem"
    part="item"
    class="udex-dropdown-list__group"
>
    {{#if modeMultiSelect}}
        <udex-dropdown-list-item
            _role="group"
            part="group-item"
            class="udex-dropdown-list__group-header"
            tabindex="0"
            mode="{{mode}}"
            supporting-text="{{supportingText}}"
            @click="{{handleHeaderPress}}"
            @keydown="{{handleKeyDown}}"
        >
            <div class="udex-dropdown-list__header-title">
                {{label}}
            </div>
        </udex-dropdown-list-item>
    {{else}}
        <div class="udex-dropdown-list__header" role="presentation">
            <span class="udex-dropdown-list__header-title">{{label}}</span>
            {{#if supportingText}}
                <span class="udex-dropdown-list__supporting-text">{{supportingText}}</span>
            {{/if}}
        </div>
    {{/if}}
    <ul
        class="udex-dropdown-list__group-list"
        @ui5-item-press="{{getHandleGroupItemsClick}}"
    >
        <slot></slot>
    </ul>
</li>
