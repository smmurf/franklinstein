<ui5-popover
    class="udex-search-suggestions__root {{homeSearchPopoverClass}}"
    hide-arrow
    _disable-initial-focus
    placement-type="Bottom"
    horizontal-align="Right"
    style="{{popoverStyles}}"
    id="suggestions-popover"
    aria-orientation="vertical"
>
    {{#if hasPopoverContent}}
        <div role="tree">
            {{#if isShowSuggestedList}}
                <div class="udex-search-suggestions__block">
                    <span class="udex-search-suggestions__heading">{{suggestedHeading}}</span>
                    <ul class="udex-search-suggestions__list" role="group">
                        {{#each suggestedList}}
                            <li
                                class="udex-search-suggestions__item"
                                role="treeitem"
                            >
                                <ui5-button
                                    icon="search"
                                    type="Button"
                                    design="Default"
                                    class="udex-search-suggestions__item-button"
                                    title="{{text}}"
                                    @click="{{handleSelectItem}}"
                                    @keydown="{{../handleKeyDown}}"
                                >
                                    {{{text}}}
                                </ui5-button>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
            {{#if isShowRecommendedList}}
                <div class="udex-search-suggestions__block">
                    <span class="udex-search-suggestions__heading">{{recommendedHeading}}</span>
                    <ul class="udex-search-suggestions__list" role="group">
                        {{#each recommendedList}}
                            <li
                                class="udex-search-suggestions__item"
                                role="treeitem"
                            >
                                <ui5-button
                                    type="Button"
                                    design="Default"
                                    class="udex-search-suggestions__item-button"
                                    title="{{text}}"
                                    @click="{{handleSelectItem}}"
                                    @keydown="{{../handleKeyDown}}"
                                >
                                    {{{text}}}
                                </ui5-button>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
        </div>
    {{/if}}
</ui5-popover>