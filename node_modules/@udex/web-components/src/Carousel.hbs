<div class="{{carouselClass}}" @keydown={{_onkeydown}}>
  {{#if showNavigationButtons.top}}
      {{> navigation}}
  {{/if}}
  <ui5-carousel
    id="carousel"
    hide-navigation-arrows
    arrows-placement="Navigation"
    ?hide-page-indicator={{_hidePageIndicator}}
  >
      {{#each items}}
          <slot name="{{_individualSlot}}"></slot>
      {{/each}}
  </ui5-carousel>
  {{#if showNavigationButtons.bottom}}
    {{> navigation}}
  {{/if}}
</div>

{{#*inline "navigation"}}
  <div class="udex-carousel__navigation-wrapper" part="navigation">
    <udex-button
      size="Large"
      design={{buttonDesign}}
      icon-only
      arrow-back
      class="udex-carousel__navigation-button"
      icon="slim-arrow-left"
      tooltip="{{previousPageText}}"
      tabindex="-1"
      part="prev-button"
      @click={{_prevButtonClick}}
      ?disabled={{isPrevButtonDisabled}}
    ></udex-button>
    <udex-button
      size="Large"
      design={{buttonDesign}}
      icon-only
      arrow-forward
      class="udex-carousel__navigation-button"
      icon="slim-arrow-right"
      tooltip="{{nextPageText}}"
      tabindex="-1"
      part="next-button"
      @click={{_nextButtonClick}}
      ?disabled={{isNextButtonDisabled}}
    ></udex-button>
  </div>
{{/inline}}
