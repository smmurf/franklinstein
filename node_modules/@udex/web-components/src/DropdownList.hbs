<div
    class="udex-dropdown-list-root"
    @ui5-item-press="{{handleItemPress}}"
    @ui5-header-press="{{handleItemPress}}"
    @keydown="{{handleKeyDown}}"
    style="height: {{holderHeight}}"
>
    <div class="udex-dropdown-list-scroll-container">
        <span id="{{_id}}-mode-label" class="hidden-text">{{ariaLabelModeText}}</span>
        <ul
            class="udex-dropdown-list"
            role="{{accessibleRole}}"
            aria-labelledby="{{ariaLabelledBy}}"
            aria-label="{{accessibleName}}">
            <slot></slot>
        </ul>
    </div>
</div>
