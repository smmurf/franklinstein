<div class="{{accordionClass}}"
     tabindex="0"
     @keydown={{keydownHandler}}
     @ui5-accordion-item-focus={{itemFocusHandler}}
    >
    <div class="udex-accordion__head" role="heading" aria-level="2">
        <h3 class="udex-accordion__headline" tabindex="0" >{{headlineText}}</h3>
        <udex-button class="udex-accordion__btn"
                     size="Large"
                     design="Tertiary"
                     @click={{toggleAllHandler}}
                     accessible-name={{toggleAllText}}
        >
            {{toggleAllText}}
        </udex-button>
    </div>
    <div class="udex-accordion__content">
        <ul class="udex-accordion__list" role="list">
            {{#each items}}
                        <slot name="{{this.item._individualSlot}}"></slot>
            {{/each}}
        </ul>
    </div>
</div>
