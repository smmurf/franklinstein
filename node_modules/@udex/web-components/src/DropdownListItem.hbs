<li
    part="item"
    class="udex-dropdown-list__item"
    role="{{roleItem}}"
    tabindex="{{_tabIndex}}"
    aria-disabled="{{_ariaDisabled}}"
    @click="{{handleItemClick}}"
    @mousedown="{{handleMouseDown}}"
    @mouseup="{{handleMouseUp}}"
    @keyup="{{handleKeyUp}}"
    @keydown="{{handleKeyDown}}"
    @focusin="{{handleFocusIn}}"
    @focusout="{{handleFocusOut}}"
    aria-selected="{{selected}}"
    ?end-section="{{endSection}}">
    {{#if modeMultiSelect}}
        <ui5-checkbox
            part="checkbox"
            tabindex="-1"
            aria-checked="{{selected}}"
            ?indeterminate={{indeterminate}}
            accessible-name="checkbox"
            ?checked="{{selected}}"
            ?disabled="{{disabled}}">
        </ui5-checkbox>
    {{/if}}
    <div class="udex-dropdown-list__content">
        <slot part="content"></slot>
        {{#if supportingText}}
            <span class="udex-dropdown-list__supporting-text">{{supportingText}}</span>
        {{/if}}
    </div>
</li>
