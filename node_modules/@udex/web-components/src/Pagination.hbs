{{#if pages}}
<nav aria-label="pagination" class="{{paginationClass}}">
    <ul class="udex-pagination__list">      
        {{#if absoluteNavigation}}
        <li class="udex-pagination__item--first udex-pagination__item">
            <udex-button
            ?disabled="{{prevButtonDisbled}}"
            aria-label="first page" 
            accessible-name="first page"
            size="Large"
            icon="close-command-field"
            design="Tertiary"
            icon-only
            @click="{{setFirstPage}}"
            ></udex-button>
        </li>
        {{/if}}
        <li class="udex-pagination__item--prev udex-pagination__item">
            <udex-button
            ?disabled="{{prevButtonDisbled}}"
            aria-label="previous page" 
            accessible-name="previous page"
            size="Large"
            icon="nav-back"
            design="Tertiary"
            icon-only
            @click="{{setPrevPage}}"
            ></udex-button>
        </li>
        {{#if typeFull}}
            {{#each pagination}}
                <li class="udex-pagination__item">
                    <a class="udex-pagination__page" href="#" 
                        @click="{{../onPageClick}}" 
                        ?active="{{active}}"
                        index="{{index}}">
                        <span class="udex-pagination__page--value">{{value}}</span>
                    </a>
                </li>
            {{/each}}
        {{/if}}
        {{#if typeShort}}
            <li class="udex-pagination__item udex-pagination__item--short">
                <span>{{shortTextStart}}</span>
                <span class="udex-pagination__item--short-separator">{{shortTextSeparator}}</span>
                <span>{{shortTextEnd}}</span>
            </li>
        {{/if}}
        <li class="udex-pagination__item--next udex-pagination__item">
            <udex-button
            ?disabled="{{nextButtonDisbled}}"
            aria-label="next page" 
            accessible-name="next page"
            size="Large"
            icon="navigation-right-arrow"
            design="Tertiary"
            icon-only
            @click="{{setNextPage}}"
            ></udex-button>
        </li>
        {{#if absoluteNavigation}}
            <li class="udex-pagination__item--last udex-pagination__item">
                <udex-button
                ?disabled="{{nextButtonDisbled}}"
                aria-label="last page" 
                accessible-name="last page"
                size="Large"
                icon="open-command-field"
                design="Tertiary"
                icon-only
                @click="{{setLastPage}}"
                ></udex-button>
            </li>
        {{/if}}
    </ul>
</nav>
{{/if}}

