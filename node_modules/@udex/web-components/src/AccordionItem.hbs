<li class={{accordionItemsClass}}
    role="listitem"
    @keydown={{keydownHandler}}>
    <div class="udex-accordion-item__header"
         tabindex="0"
         aria-level="3"
         role="button"
         aria-expanded="false"
         aria-controls="udex-accordion-item__{{_id}}-content"
         @focus={{focusHandler}}
         @click={{itemClickHandler}}>
        <div class="udex-accordion-item__icon-wrapper">
          <ui5-icon class="udex-accordion-item__icon" name="slim-arrow-right"></ui5-icon>
        </div>
        <h4 class="udex-accordion-item__title">{{title}}</h4>
    </div>
    <div id="udex-accordion-item__{{_id}}-content" class="udex-accordion-item__content">
        <slot></slot>
    </div>
</li>
