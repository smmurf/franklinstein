{{#if hasNotHref}}
    <button
        id="{{this._id}}"
        class="udex-tab-navigation__button-tab {{selectedClass}}"
        tabindex="{{this._tabIndex}}"
        type="button"
        role="tab"
        aria-posinset="{{this._posinset}}"
        aria-setsize="{{this._setsize}}"
        aria-controls="{{this._contentId}}"
        aria-selected="{{this.effectiveSelected}}"
        aria-labelledby="{{this.ariaLabelledBy}}"
        ._realTab="{{this}}"
    >
        {{#if hasIcon}}
            <span class="udex-tab-navigation__button-icon-outer">
                <ui5-icon
                    class="udex-tab-navigation__button-icon"
                    name="{{icon}}"
                ></ui5-icon>
                {{#if showAttentionBadge}}
                    <span class="udex-tab-navigation__button-badge"></span>
                {{/if}}
            </span>
        {{/if}}
        <span class="udex-tab-navigation__button-text {{classWithIcon}}">
            {{textValidated}}
        </span>
        {{#if hasNotIcon}}
            <span class="udex-tab-navigation__button-badge"></span>
        {{/if}}
    </button>
{{else}}
    <a
        id="{{this._id}}"
        class="udex-tab-navigation__button-tab {{selectedClass}}"
        tabindex="-1"
        role="tab"
        aria-posinset="{{this._posinset}}"
        aria-setsize="{{this._setsize}}"
        href="{{href}}"
        target="{{this.target}}"
        ._realTab="{{this}}"
    >
        {{#if hasIcon}}
            <span class="udex-tab-navigation__button-icon-outer">
                <ui5-icon
                    class="udex-tab-navigation__button-icon"
                    name="{{icon}}"
                ></ui5-icon>
                <span class="udex-tab-navigation__button-badge"></span>
            </span>
        {{/if}}
        <span class="udex-tab-navigation__button-text">
            {{textValidated}}
        </span>
        {{#if hasNotIcon}}
            <span class="udex-tab-navigation__button-badge"></span>
        {{/if}}
    </a>
{{/if}}