<div class="udex-dropdown">
    {{#if hasTriggerSlot}}
        <slot
            class="udex-dropdown__opener"
            slot="trigger"
            name="trigger"
            @click="{{onTriggerClick}}">
        </slot>
    {{/if}}
    <ui5-popover
        class="udex-dropdown__pane"
        aria-orientation="vertical"
        allow-target-overlap
        hide-arrow
        placement-type="{{placementType}}"
        horizontal-align="{{horizontalAlign}}"
        @ui5-after-open={{afterDropdownOpen}}
        @ui5-before-open={{beforeDropdownOpen}}
        @ui5-after-close={{afterDropdownClose}}
        @ui5-before-close={{beforeDropdownClose}}
        style="width:{{holderWeight}}"
    >
        {{#if hasHeaderSlot}}
            <slot slot="header" name="header"></slot>
        {{/if}}
        <slot></slot>
        {{#if hasFooterSlot}}
            <slot slot="footer" name="footer"></slot>
        {{/if}}
    </ui5-popover>
</div>

