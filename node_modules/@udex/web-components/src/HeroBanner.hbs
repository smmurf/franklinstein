<div class="udex-hero-banner" part="wrapper" style="background-color: {{wrapperBackgroundColor}}">
  {{#if hasCustomBackgroundPicture}}
    <slot name="backgroundPicture"></slot>
  {{else if hasBackgroundImage}}
    <picture>
      <img loading="{{backgroundImageLoadingStrategy}}" src="{{backgroundImage}}" part="background-image" class="udex-hero-banner__background-image" alt="{{backgroundImageLabel}}" />
    </picture>
  {{/if}}

  <slot name="content" part="content"></slot>

  {{#if hasAdditionalContent}}
    <slot name="additionalContent" part="additionalContent"></slot>
  {{/if}}
</div>
