<div class="udex-search__root">
    <form role="search" class="udex-search__container {{focusClasses}} {{isNotEmptyClass}}">
        {{#if label}}
            <label for="search-input" class="{{labelClasses}}">
                {{label}}
            </label>
        {{/if}}
        <input
            id="search-input"
            type="search"
            name="search"
            class="udex-search__field"
            autocomplete="off"
            role="combobox"
            aria-controls="suggestions-popover"
            aria-expanded="false"
            aria-haspopup="{{showSuggestedPopover}}"
            .value="{{value}}"
            @input="{{handleSearchChange}}"
            @keydown="{{handleKeyDown}}"
            @focus="{{handleFocus}}"
            @focusout="{{handleFocusout}}"
            @blur="{{handleBlur}}"
        />
        <div class="udex-search__icons">
            {{#if isShowResetButton}}
                <ui5-button
                    id="reset-button"
                    class="udex-search__button udex-search__reset-button"
                    design="Default"
                    icon="decline"
                    tooltip="Reset Button"
                    @click="{{onReset}}"
                ></ui5-button>
            {{/if}}
            {{#if showVoiceButton}}
                <ui5-button
                    id="voice-button"
                    class="udex-search__button udex-search__voice-button {{voiceActiveClass}}"
                    design="Default"
                    icon="microphone"
                    tooltip="Voice Button"
                    @click="{{onVoice}}"
                ></ui5-button>
            {{/if}}
            {{#if showSubmitButton}}
                <ui5-button
                    id="submit-button"
                    class="udex-search__button udex-search__submit-button {{searchButtonActiveClass}}"
                    design="Default"
                    icon="search"
                    tooltip="Submit Button"
                    @click="{{onSubmit}}"
                ></ui5-button>
            {{/if}}
        </div>
    </form>
</div>
