<div class="udex-tab-navigation__root">
    <div
        id="{{_id}}-header"
        class="udex-tab-navigation__header"
        @keydown="{{handleKeyDown}}"
    >
        <div
            id="{{_id}}-header-tabs"
            class="udex-tab-navigation__header-tabs"
            role="tablist"
            @click="{{onTabClick}}"
        >
            {{#each items}}
                {{this.tabNavigation}}
            {{/each}}
        </div>
        <button
            class="udex-tab-navigation__button-more"
            @click="{{handleMoreButton}}"
            @keydown="{{handleFocusMoreButton}}"
            tabindex="-1"
            aria-haspopup="menu"
            aria-expanded="{{_isExpanded}}"
            tooltip="{{moreButtonText}}"
            hidden
        >
            {{moreButtonText}}
            <ui5-icon
                class="udex-tab-navigation__button-more-icon"
                name="navigation-down-arrow"
            ></ui5-icon>
        </button>
    </div>
    <div class="udex-tab-navigation__content" id="udex-{{__id}}-content">
        {{#each items}}
            <div class="udex-tab-navigation__content-item">
                <slot name="{{this._slotName}}"></slot>
            </div>
        {{/each}}
    </div>
</div>
