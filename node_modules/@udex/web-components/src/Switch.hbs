<div class="udex-switch">
    {{#if label}}
        <label for="udex-switch__input" class="udex-switch__label">{{label}}</label>
    {{/if}}
    <div
        class="udex-switch__container"
        role="switch"
        aria-label="{{accessibleName}}"
        aria-checked="{{checked}}"
        aria-disabled="{{disabled}}"
        tabindex="{{switchTabIndex}}"
        title="{{tooltip}}"
        @click="{{handleSwitchClick}}"
	    @keydown="{{handleSwitchKeyDown}}"
    >
        <div class="udex-switch__track {{isActiveTrackClass}}">
            <div class="udex-switch__handle">
                {{#if isSemanticColor}}
                    {{#if checked}}
                        <ui5-icon name="accept" class="udex-switch__icon"></ui5-icon>
                    {{else}}
                        <ui5-icon name="decline" class="udex-switch__icon"></ui5-icon>
                    {{/if}}
                {{else}}
                    {{#if checked}}
                        <ui5-icon name="accept" class="udex-switch__icon"></ui5-icon>
                    {{else}}
                        <ui5-icon name="less" class="udex-switch__icon"></ui5-icon>
                    {{/if}}
                {{/if}}
            </div>
        </div>

        <input id="udex-switch__input" type="checkbox" ?checked="{{checked}}" class="udex-switch__input" />
    </div>
</div>
