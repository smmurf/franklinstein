<div class="udex-message-strip">
  <ui5-message-strip id="message-strip" hide-close-button>
    <div class="message-strip__text">
      {{#if showTextStatus}}
        <strong class="message-strip__text-status">{{textStatus}}:</strong>
      {{/if}}
      <slot></slot>
    </div>
    {{#unless hideCloseButton}}
      <udex-button
        size="Small"
        icon="decline"
        design="Tertiary"
        icon-only
        @click={{_closeClick}}
        tooltip="{{_closeButtonText}}"
      ></udex-button>
    {{/unless}}
  </ui5-message-strip>
</div>
