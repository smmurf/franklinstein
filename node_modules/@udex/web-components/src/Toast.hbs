<ui5-toast id="udex-toast" class="udex-toast {{toastClasses}}">
  <div class="udex-toast__content">
    {{#if withIcon}}
      <ui5-icon class="udex-toast__icon" name="{{iconName}}" design="{{iconDesign}}" ui5-icon=""></ui5-icon>
    {{/if}}
    <slot></slot>
    {{#unless hideCloseIcon}}
      <udex-button
      class="udex-toast__button"
      size="Small"
      icon="decline"
      design="Tertiary"
      accessible-name="close"
      @click={{closeToast}}
      icon-only></udex-button>
    {{/unless}}
  </div>
</ui5-toast>